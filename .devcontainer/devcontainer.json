{
  "name": "Defense",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-22.04",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/cmake:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential qt6-base-dev qt6-tools-dev-tools libxcb1 libx11-xcb1 libxcb-render0 libxcb-shape0 libxcb-xfixes0",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  }
}
